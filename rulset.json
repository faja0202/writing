  "merge_policy": {
    "allow_external_overrides": true,
    "precedence": ["user_override", "doc_ingest", "ruleset_default"],
    "override_keys": [
      "recipient",
      "cta_key",
      "tone",
      "force_linkage",
      "length",
      "labels"
    ],
    "doc_ingest": {
      "extractors": [
        {
          "name": "cpi_keywords",
          "patterns": [
            "대인 민감성",
            "자기관리",
            "자기통제",
            "타당도",
            "사회적 바람직성",
            "경험적 문항",
            "이론적 문항",
            "조직 적합성",
            "대인관계",
            "434문항",
            "30요인"
          ]
        },
        {
          "name": "application_phrases",
          "patterns": [
            "회의",
            "면접",
            "코칭",
            "피드백",
            "협업",
            "갈등",
            "규칙",
            "프레임",
            "역할 분담"
          ]
        }
      ],
      "max_snippets": 8
    }
  },

  "controller": {
    "inputs": {
      "idea_free_text": "사용자가 주는 후킹 아이디어(밈/예능/실험/사례 등 한 줄).",
      "recipient": "선택(없으면 fallback_recipient 사용).",
      "cta_key": "선택(없으면 cta_sessions에서 최신 키 사용).",
      "override": "선택(JSON 조각: tone, force_linkage 등).",
      "uploaded_docs": "선택(DOCX 등 규칙/레퍼런스 문서)."
    },
    "pipeline_steps": [
      "1) 아이디어에서 핵심 키워드 추출",
      "2) fetch.search_templates로 웹 검색(allowed_domains, recency_days 준수)",
      "3) 상위 1~3개 결과를 사실 위주로 요약(요약 필드는 fetch.summary_fields 사용)",
      "4) 요약 키워드를 bridge_matrix 개념에 매핑해 CPI 축 1~2개 선택(또는 override.force_linkage 우선)",
      "5) uploaded_docs에서 doc_ingest.extractors로 관련 문장/용어 스니펫 추출",
      "6) sections_order에 따라 텍스트 생성: 후킹(출처 간단 표기) → 핵심 인사이트(높/낮 양면, 업무 사례) → 적용(행동 팁 2~3개)",
      "7) CTA 렌더링: cta_key가 있으면 해당, 없으면 가장 미래 날짜/마지막 키 사용",
      "8) lint_checks 실행 → 수정 권고 반영",
      "9) template_text에 렌더링하여 최종 출력"
    ],
    "apply_tips_library": [
      "회의: '1차 익명 투표 → 2차 공개 토론'으로 집단 압력 완화",
      "발언 프레임: 사실-영향-제안(SBI 변형) 구조로 표현",
      "역할 분담: 데빌스 애드버킷(대안 관점 담당) 지정",
      "면접: 구조화 질문 + 추가 탐색 질문 세트 준비",
      "코칭: 목표 재정의(WHY→WHAT→HOW)와 체크리스트 도입"
    ]
  },

  "lint_checks": [
    {
      "id": "order",
      "desc": "섹션 순서가 '후킹→핵심 인사이트→적용→교육 안내'인지 확인",
      "severity": "error"
    },
    {
      "id": "length",
      "desc": "총 단어 수가 style.length 범위 내인지 확인",
      "severity": "warn"
    },
    {
      "id": "cpi_link",
      "desc": "CPI™ 인성검사 및 지정된 축 최소 1회 이상 명시",
      "severity": "error"
    },
    {
      "id": "two_sided",
      "desc": "핵심 인사이트에서 높음/낮음 양면 설명 포함",
      "severity": "error"
    },
    {
      "id": "work_examples",
      "desc": "업무 맥락 예시 2개 이상 포함",
      "severity": "warn"
    },
    {
      "id": "cta_block",
      "desc": "CTA에 제목/일시/장소/대상/비용/혜택/할인 포함",
      "severity": "error"
    },
    {
      "id": "banned_phrases",
      "desc": "과장 표현/금지 문구 사용 여부 점검",
      "severity": "error"
    },
    {
      "id": "exclamation_limit",
      "desc": "감탄부호 사용 횟수 제한 준수",
      "severity": "warn"
    },
    {
      "id": "source_citation",
      "desc": "후킹 단락에 간단한 출처(채널/사이트 + 연-월) 표기",
      "severity": "warn"
    }
  ],

  "safety_and_ethics": {
    "copyright": "영상/이미지 재배포 금지, 텍스트 요약만 사용, 원저작자 채널/사이트 표기",
