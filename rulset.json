{
  "schema_version": "1.0.0",
  "name": "CPI_email_ruleset_dynamic_single_file",
  "description": "사용자가 제시한 아이디어(심리학 실험/예능/밈 등)를 실시간 검색으로 보강해 '후킹 → 핵심 인사이트 → 적용 → CTA' 순서의 홍보메일을 자동 생성하는 단일 규칙 파일.",
  "brand": {
    "nickname": "스타님",
    "salutation_format": "{{recipient}} 스타님,",
    "fallback_recipient": "구독자"
  },

  "style": {
    "honorific": true,
    "emoji": false,
    "exclamation_soft_limit": 1,
    "case_rules": {
      "keep_trademark": ["CPI™ 인성검사"],
      "units": ["%", "점", "요인"]
    },
    "banned_phrases": [
      "100% 보장",
      "절대 실패하지 않습니다",
      "반드시 성공합니다",
      "무조건",
      "확실히"
    ],
    "preferred_phrases": [
      "데이터에 근거해",
      "상황에 따라",
      "균형 있게",
      "살펴봅니다",
      "확인할 수 있습니다"
    ],
    "length": {
      "min_words": 350,
      "target_words": 550,
      "max_words": 800
    },
    "formatting": {
      "use_markdown_headings": true,
      "section_labels": {
        "hook": "후킹",
        "insight": "핵심 인사이트",
        "apply": "적용",
        "cta": "교육 안내"
      },
      "source_inline_citation_style": "출처: {{source_name}}, {{year_month}}"
    }
  },

  "sections_order": ["후킹", "핵심 인사이트", "적용", "교육 안내"],

  "semantics": {
    "must_link_to_cpi": true,
    "cpi_constructs": [
      "대인 민감성",
      "자기관리(자기통제)",
      "대인관계 성향(7요인)",
      "조직 적합성(434문항·30요인)",
      "타당도 척도(사회적 바람직성/긍정왜곡 등)",
      "경험적 문항 vs 이론적 문항"
    ],
    "two_sided_explanation_required": true,
    "work_examples_required": 2,
    "work_examples_contexts": ["회의", "면접/채용", "피드백/코칭", "프로젝트 협업", "고객응대"]
  },

  "bridge_matrix": [
    {
      "concept_cluster": "사회적 동조/집단사고/여론 압력/다수의견",
      "cpi": ["대인 민감성"],
      "notes": "다수 의견에 흔들림 ↔ 독립 판단의 균형"
    },
    {
      "concept_cluster": "지연된 만족/충동 억제/챌린지/루틴/자기조절",
      "cpi": ["자기관리(자기통제)"],
      "notes": "장기 목표 정렬, 에너지/감정 조절"
    },
    {
      "concept_cluster": "이미지 관리/사회적 바람직성/겉모습 vs 진짜 나/가면/멀티 페르소나",
      "cpi": ["타당도 척도(사회적 바람직성)", "경험적 문항 vs 이론적 문항"],
      "notes": "정직·일관 응답의 중요성, 편향 교정"
    },
    {
      "concept_cluster": "조직문화/컬처핏/우리 조직과 결/역할/가치관",
      "cpi": ["조직 적합성(434문항·30요인)"],
      "notes": "지원자-조직의 적합성, 온보딩/정착"
    },
    {
      "concept_cluster": "관계 갈등/상사·동료 갈등/피드백 스킬/공감-직설",
      "cpi": ["대인관계 성향(7요인)"],
      "notes": "협업 문해력, 표현-수용의 균형"
    }
  ],

  "fetch": {
    "enable_web": true,
    "recency_days": 540,
    "max_sources": 3,
    "allowed_domains": [
      "wikipedia.org",
      "namu.wiki",
      "mbc.co.kr",
      "sbs.co.kr",
      "tving.com",
      "tvn.cjenm.com",
      "youtube.com",
      "youtu.be",
      "instagram.com",
      "x.com"
    ],
    "disallowed_content_flags": [
      "유출",
      "비공식 녹화",
      "사생활 침해",
      "명예훼손 가능성"
    ],
    "search_templates": [
      "밈 {{idea}} 의미",
      "예능 {{idea}} 장면 해설",
      "심리학 {{idea}} 사례",
      "{{idea}} 유래 요약",
      "{{idea}} best moments",
      "{{idea}} controversy summary",
      "한국 예능 {{idea}} 요약",
      "연예/밈 {{idea}} 출처"
    ],
    "summary_fields": ["title", "channel_or_site", "date_ym", "key_points"],
    "citation_render": "출처: {{channel_or_site}}, {{date_ym}}",
    "safety_notes": "이미지·영상은 재배포하지 않고 텍스트 요약만 사용. 논란/사건은 사실 확인 가능한 출처만 사용하고 선정적 내용 배제."
  },

